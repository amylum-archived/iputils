name 'iputils'
org 'amylum'

deps(
  libcap: {
    version: '2.25-35',
    checksum: '7774db7db915442dcec65ebea70749c46821ee73bef3fede184d76236352f96d'
  },
  libgcrypt: {
    version: '1.8.2-2',
    checksum: 'bec2146f8bda8fd21588d0d19894a520fd3ded55d3c759893667469dd8b21444'
  },
  'libgpg-error': {
    version: '1.28-1',
    checksum: '55eec88e8ef7164bc4c2a851fb1f8128f3fe0b0a5e464db77725affb19191f6e'
  },
  libidn: {
    version: '1.33-2',
    checksum: '8320beb19563e507acf2e2e79adb5bfcbcefcb0c5a29a21c9fd288323e0087da'
  },
  nettle: {
    version: '3.4-1',
    checksum: 'e960c73d20806156d7dc3fc604af6d031122efe65f9e5155bfafa9280eaf241b'
  },
  'linux-api-headers': {
    version: '4.15-2',
    checksum: 'dbfe68e7620b09fe2996d83fe4ae738dddb2486885b9d5ef3dc27ae77d7585ba'
  }
)

configure_flags(
  prefix: '/usr',
  'with-include': "#{dep(:skalibs)}/usr/include",
  'with-lib': "#{dep(:skalibs)}/usr/lib/skalibs",
  'with-dynlib': "#{dep(:skalibs)}/usr/lib",
  'with-sysdeps': "#{dep(:skalibs)}/usr/lib/skalibs/sysdeps"
)
remove_linker_archives
remove_pkgconfig_files

cflags
harden

patch 'license.patch'
patch 'iputils-20150815-missing-AI_IDN-AI_CANONIDN-NI_IDN.patch'

build do
  run "make CC=musl-gcc CFLAGS='#{@forge.cflags.join(' ')}' LDFLAGS='#{@forge.cflags.join(' ')}'"
  run 'make man'
  run "mkdir -p #{releasedir}/usr/bin #{releasedir}/usr/share/man/man8"
  %w(arping clockdiff ping rarpd rdisc tftpd tracepath).each do |bin|
    run "cp #{bin} #{releasedir}/usr/bin/"
    run "cp doc/#{bin}.8 #{releasedir}/usr/share/man/man8/"
  end
  run "ln -sf tracepath.8.gz #{releasedir}/usr/share/man/man8/tracepath6.8.gz"
end

test do
  # TODO: add tests
end
